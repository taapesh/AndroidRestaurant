<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taapesh.androidrestaurant" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartActivity"
            android:label="@string/title_activity_launcher" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserHomeActivity"
            android:label="UserHomeActivity" >
        </activity>
        <activity
            android:name=".WaiterHomeActivity"
            android:label="@string/title_activity_waiter_home" >
        </activity>
        <activity
            android:name=".EatingActivity"
            android:label="EatingActivity" >
        </activity>
        <activity
            android:name=".UserLoginActivity"
            android:label="Sign In"
            android:parentActivityName=".StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.taapesh.androidrestaurant.StartActivity" />
        </activity>
        <activity
            android:name=".UserRegistrationActivity"
            android:label="Register"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.taapesh.androidrestaurant.StartActivity" />
        </activity>
        <activity
            android:name=".ServingActivity"
            android:label="@string/title_activity_serving" >
        </activity>
        <activity
            android:name=".TipRatingReviewActivity"
            android:label="@string/title_activity_tip_rating_review" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="Profile"
            android:parentActivityName=".UserHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.taapesh.androidrestaurant.UserHomeActivity" />
        </activity>
        <activity
            android:name=".HistoryActivity"
            android:label="History"
            android:parentActivityName=".UserHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.taapesh.androidrestaurant.UserHomeActivity" />
        </activity>
        <activity
            android:name=".PaymentActivity"
            android:label="Payment"
            android:parentActivityName=".UserHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.taapesh.androidrestaurant.UserHomeActivity" />
        </activity>
        <activity
            android:name=".AddPaymentActivity"
            android:label="Add Payment"
            android:parentActivityName=".PaymentActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.taapesh.androidrestaurant.PaymentActivity" />
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:label="Edit Profile"
            android:parentActivityName=".ProfileActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.taapesh.androidrestaurant.ProfileActivity" />
        </activity>
        <activity
            android:name=".JoinTableActivity"
            android:label="@string/title_activity_join_table"
            android:parentActivityName=".UserHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.taapesh.androidrestaurant.UserHomeActivity" />
        </activity>
        <activity
            android:name=".FindTableActivity"
            android:label="@string/title_activity_find_table"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".UserHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.taapesh.androidrestaurant.UserHomeActivity" />
        </activity>
    </application>

</manifest>
