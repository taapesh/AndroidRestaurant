<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.taapesh.androidrestaurant.ServingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/activeTableList"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Tables"
            android:textStyle="bold"
            android:id="@+id/activeTitle"/>

        <it.gmariotti.cardslib.library.view.CardView
            android:id="@+id/activeTable1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card:card_layout_resourceID="@layout/card_thumbnail_layout" />

        <it.gmariotti.cardslib.library.view.CardView
            android:id="@+id/activeTable2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card:card_layout_resourceID="@layout/card_thumbnail_layout" />

        <it.gmariotti.cardslib.library.view.CardView
            android:id="@+id/activeTable3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card:card_layout_resourceID="@layout/card_thumbnail_layout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/finishedTableList">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finished Tables"
            android:textStyle="bold"
            android:id="@+id/finishedTitle"/>

        <it.gmariotti.cardslib.library.view.CardView
            android:id="@+id/finishedTable1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card:card_layout_resourceID="@layout/card_thumbnail_layout" />

        <it.gmariotti.cardslib.library.view.CardView
            android:id="@+id/finishedTable2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card:card_layout_resourceID="@layout/card_thumbnail_layout" />

        <it.gmariotti.cardslib.library.view.CardView
            android:id="@+id/finishedTable3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card:card_layout_resourceID="@layout/card_thumbnail_layout" />

    </LinearLayout>

</LinearLayout>
